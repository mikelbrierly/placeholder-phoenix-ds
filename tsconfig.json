{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "removeComments": true,
    "allowJs": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "preserve"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
