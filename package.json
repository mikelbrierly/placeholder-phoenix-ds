{
  "name": "phoenix-design-system",
  "version": "1.0.0",
  "description": "frontend webpack build project with TS and SCSS",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/tmobile/digital/tos/phoenix/phoenix-design-system"
  },
  "private": true,
  "main": "dist/styles/phoenix.css",
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "webpack -c webpack.dev.js",
    "build:prod": "webpack -c webpack.prod.js",
    "format": "prettier --write ./",
    "format:check": "prettier --check ./",
    "lint:js": "eslint --ext ts src/",
    "lint:js:fix": "npm run eslint -- --fix",
    "lint:styles": "stylelint \"src/**/*.scss\" --syntax scss",
    "lint:styles:fix": "npm run stylelint -- --fix"
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,scss}": [
      "npm run format"
    ],
    "src/**/*.{js,ts}": [
      "npm run lint:js"
    ],
    "src/**/*.scss": [
      "npm run lint:styles"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.2",
    "browserslist": "^4.17.4",
    "circular-dependency-plugin": "^5.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-webpack-plugin": "^3.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.4",
    "mini-css-extract-plugin": "^2.4.2",
    "postcss-loader": "^6.2.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "sass-loader": "^12.2.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "stylelint-webpack-plugin": "^3.0.1",
    "typescript": "^4.4.4",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.1",
    "webpack-fix-style-only-entries": "^0.6.1",
    "webpack-merge": "^5.8.0",
    "webpack-stats-plugin": "^1.0.3"
  },
  "dependencies": {}
}
